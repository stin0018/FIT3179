{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Blood Donations in Malaysia by State",
  "width": 600,
  "height": 800,
  "projection": { "type": "mercator" },
  "data": {
    "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/malaysia/malaysia-states.json",
    "format": { "type": "topojson", "feature": "states" }
  },
  "transform": [
    {
      "lookup": "properties.NAME_1",
      "from": {
        "data": {
          "url": "blood_donations_state.csv"
        },
        "key": "state",
        "fields": ["donations"]
      }
    }
  ],
  "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1 },
  "encoding": {
    "color": {
      "field": "donations",
      "type": "quantitative",
      "scale": { "scheme": "reds" }
    },
    "tooltip": [
      { "field": "properties.NAME_1", "title": "State" },
      { "field": "donations", "title": "Donations" }
    ]
  }
}

